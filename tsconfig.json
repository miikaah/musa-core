{
  "compilerOptions": {
    "declarationDir": "lib",
    "lib": ["esNext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "lib",
    "target": "es2022",
    "types": ["vitest/globals"],
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts",
    "addons/normalization/**/*.mjs",
    "src/normalization/main.ts",
    "src/normalization/requireAddon.ts",
    "src/normalization/worker.ts"
  ]
}
