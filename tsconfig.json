{
  "compilerOptions": {
    "declarationDir": "lib",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "target": "es2022",
    "types": ["vitest/globals"],
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["./src/**/*.ts", "eslint.config.mjs"]
}
